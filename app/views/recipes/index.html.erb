<div id="indexdiv"><h1 id="indexheadline">Recipes</h1>

<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-default", id:"new" %>
</div>

<div class="row">
  <% @recipes.each do |recipe| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2><%= link_to recipe.name,recipe %></h2>
        <h3><%= recipe.category %></h3>
        <p>Minutes to prepare:<%= recipe.minutes_to_prepare %></p>
        <p>Minutes to cook: <%= recipe.minutes_to_cook %></p>
        <p>Total minutes needed: <%= recipe.minutes_total%></p>
        <p><%= image_tag recipe.picture_url%></p>
         <div class="btn-group">
           <%= link_to 'Show', recipe, class: "btn btn-default" %>
           <%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-default" %>
           <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" %>     
          </div> 
      </div>
    </div>
  </div>
  <%end%>
</div>

